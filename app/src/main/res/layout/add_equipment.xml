<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="添加设备"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="设备照片"
            android:textColor="@color/mblue" />

        <include layout="@layout/line" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/myrecycler_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@color/transparent"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="设备信息"
            android:textColor="@color/mblue" />

        <include layout="@layout/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--左边竖排 名词-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="品牌" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="名称厂家" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="出厂编号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="发动机编号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="备注信息" />


            </LinearLayout>


            <!--右边一排 可编辑editext-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入名称"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tv_pp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入品牌"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_cj"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入厂家"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_ccbh"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入出厂编号"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_fdjbh"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入发动机编号"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_bzxx"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="请输入备注信息"
                    android:maxLines="3"
                    android:textCursorDrawable="@drawable/shape_cursor_bg"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="30dp"
            android:background="@drawable/shape_blue_selector"
            android:text="保存设备"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>


</ScrollView>